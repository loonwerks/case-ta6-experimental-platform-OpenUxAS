<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<UxAS FormatVersion="1.0" EntityID="500"  EntityType="Ground">
    <!--Use Zyre for WiFi
    <Bridge Type="LmcpObjectNetworkZeroMqZyreBridge" NetworkDevice="ens33">
        <SubscribeToMessage MessageType="afrl.cmasi.OperatingRegion"/>
        <SubscribeToMessage MessageType="afrl.cmasi.LineSearchTask"/>
        <SubscribeToMessage MessageType="afrl.cmasi.AutomationRequest"/>
    </Bridge>
    --->

    <!-- Use TCP for wired --->
    <!-- Example network configuration:
         The addresses for the bridges configured herein assume the following
         network addresses.  You may need to change them if your network
         differs.
            AMASE host 192.168.2.2
            UxAS Ground Station 192.168.2.5
            UxAS Air Vehicle 192.168.2.7
    --->
    <Bridge Type="LmcpObjectNetworkTcpBridge" TcpAddress="tcp://192.168.2.7:5556" Server="FALSE">
        <SubscribeToMessage MessageType="afrl.cmasi.OperatingRegion"/>
        <SubscribeToMessage MessageType="afrl.cmasi.LineSearchTask"/>
        <SubscribeToMessage MessageType="afrl.cmasi.AutomationRequest"/>
    </Bridge>

    <!-- Connect to AMASE (see config folder in OpenAMASE) -->
    <Bridge Type="LmcpObjectNetworkTcpBridge" TcpAddress="tcp://192.168.2.2:5555" Server="FALSE">
        <SubscribeToMessage MessageType="afrl.cmasi.OperatingRegion"/>
<!--        <SubscribeToMessage MessageType="afrl.cmasi.LineSearchTask" />	-->
        <SubscribeToMessage MessageType="afrl.cmasi.AutomationRequest" />
    </Bridge>

    <Service Type="Test_SimulationTime"/>
    <Service Type="SendMessagesService" PathToMessageFiles="../Messages/">
        <Message MessageFileName="OperatingRegion_336.xml" SendTime_ms="5000"/>
        <Message MessageFileName="tasks/1000_LineSearch_LINE_Waterway_Deschutes_bad.xml" SendTime_ms="10000"/>
        <Message MessageFileName="tasks/1000_LineSearch_LINE_Waterway_Deschutes_good.xml" SendTime_ms="17000"/>
        <Message MessageFileName="tasks/1001_AutomationRequest_LINE_Waterway_Deschutes.xml" SendTime_ms="25000"/>
    </Service>
    <Service Type="MessageLoggerDataService" LogFileMessageCountLimit="1000" FilesPerSubDirectory="1000">
        <LogMessage MessageType="uxas" NumberMessagesToSkip="0"/>
        <LogMessage MessageType="afrl" NumberMessagesToSkip="0"/>    
    </Service>
    
</UxAS>


